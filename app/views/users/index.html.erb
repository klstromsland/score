<div class="subheader">
	<div class = "container">
		<p id="notice"><%= notice %></p>
		<h1 id="h1"><span style="color:greenyellow; font-weight:bold">~</span><span style="color:white">Users<span style="color:greenyellow; font-weight:bold">~</span></span></h1>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<h4 id="h4bold">First Name</h4>
		</div>
			<div class="col-xs-2">
			<h4 id="h4bold">Last Name</h4>
		</div>
			<div class="col-xs-2">
			<h4 id="h4bold">Role</h4>
		</div>
			<div class="col-xs-1">
			<h4 id="h4bold">Status</h4>
		</div>
	</div> 
	<% @users.each do |user| %>
		<div class="row">
			<div class="col-xs-2">
				<p><%= user.first_name %></p>
			</div>
			<div class="col-xs-2">
				<p><%= user.last_name %></p>
			</div>
			<div class="col-xs-2">
				<p><%= user.role %></p>
			</div>
			<div class="col-xs-1">
				<p><%= user.status %></p>
			</div>
			<div class="col-xs-2">
				<p class="link"><%= link_to "Show", user %> | <%= link_to "Edit", edit_user_path(user) %> | <%= link_to "Remove", user, method: :delete, data: { confirm: "Are you sure?" } %></p>
			</div>
		</div>
	<% end %>  
	<p class="linktop"><%= link_to "Back to Events", events_path %> | <%= link_to "New User", new_user_path %></p>
</div>