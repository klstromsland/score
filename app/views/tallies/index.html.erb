<div class="container">
<p id="notice"><%= notice %></p>

<h1>Tallies</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Total Time Minutes</th>
      <th></th>
      <th>Total Time Seconds</th>
      <th></th>
      <th>Total Time Hundredths</th>
       <th></th>
      <th>Total Points</th>
      <th></th>	  
      <th>Total Faults</th>
      <th></th>	  
      <th>Qualifying Score</th>
      <th></th>
      <th>Qualifying Scores</th>
      <th></th>
      <th>Title</th>	  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tallies.each do |tally| %>
      <tr>
        <td><%= tally.total_time_m %>:</td>
        <td><%= tally.total_time_s %>:</td>
        <td><%= tally.total_time_ms %></td>
        <td><%= tally.total_points %></td>
        <td><%= tally.total_faults %></td>
		<td><%= tally.qualifying_score %></td>
		<td><%= tally.qualifying_scores %></td>
        <td><%= tally.title %></td>
        <td><%= link_to 'Show', tally %></td>
        <td><%= link_to 'Edit', edit_tally_path(tally) %></td>
        <td><%= link_to 'Destroy', tally, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tally', new_tally_path %>
</div>