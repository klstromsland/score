<div class="subheader">
	<div class="container" id="center">
		<h1><span style="color:greenyellow; font-weight:bold">~</span><span style="color:white">Log into ScoreSheet<span style="color:greenyellow; font-weight:bold">~</span></h1>		
	</div>
</div>
<div class="container" id="center">
	<div class="row">
	  <div class="col-xs-12">
			<%= form_for(:session, url: login_path) do |f| %>
				<p class="femail"><%= f.email_field :email, :placeholder => "Email" %></p>
				<p class="fpassword"><%= f.password_field :password, :placeholder => "Password" %></p>
				<%= f.submit "Log in", class: "action" %>
			<% end %>
		</div>
	</div>
</div>